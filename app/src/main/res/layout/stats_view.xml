<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_weight="2">

    //// Title ////
    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATS"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/spacer"
        android:layout_marginTop="@dimen/spacer"
        android:layout_marginEnd="@dimen/spacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/total_perfect_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total perfect days:"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/spacer"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/spacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsTitle"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CalenderViewCustom"
        android:layout_marginStart="@dimen/spacer"
        android:layout_marginTop="@dimen/spacer"
        android:layout_marginEnd="@dimen/spacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_perfect_days" />

</android.support.constraint.ConstraintLayout>